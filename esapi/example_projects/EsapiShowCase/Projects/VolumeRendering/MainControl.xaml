<UserControl x:Class="VolumeRendering.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Black">
  <UserControl.Resources>
    <Style x:Key="RowStyle" TargetType="DataGridRow">
      <Setter Property="Background" Value="DarkSlateGray"/>
      <Setter Property="Foreground" Value="Gainsboro"/>
    </Style>
    <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
      <Setter Property="Background" Value="DarkSlateGray"/>
      <Setter Property="Foreground" Value="Gainsboro"/>
    </Style>
    <Style x:Key="RowHeaderStyle" TargetType="DataGridRowHeader">
      <Setter Property="Background" Value="DarkSlateGray"/>
      <Setter Property="Foreground" Value="Gainsboro"/>
    </Style>
    <Style x:Key="CellStyle" TargetType="DataGridCell">
      <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="Button">
      <Setter Property="Background" Value="DarkSlateGray"/>
      <Setter Property="Foreground" Value="Gainsboro"/>
      <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>
    <Style TargetType="TextBox">
      <Setter Property="Background" Value="Black"/>
      <Setter Property="Foreground" Value="DarkGray"/>
      <Setter Property="FontFamily" Value="Segoe UI"/>
      <Setter Property="BorderBrush" Value="Black"/>
    </Style>
  </UserControl.Resources>

  <Grid Margin="10" x:Name="m_rootGrid" Background="Black">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="25*"/>
      <ColumnDefinition Width="75*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="25"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Column="0">
      <Button Click="OnButton3DClick" Height="30" Margin="8">3D</Button>
      <Button Click="OnTransferFuncClick" Height="30" Margin="8">Transfer Func</Button>
      <Button Click="OnAutoRotateClick" Height="30" Margin="8">Auto Rotate</Button>
      <Button Click="OnResetViewButtonClick" Height="30" Margin="8">Reset View</Button>
      <Button Click="OnSaveButtonClick" Height="30" Margin="8">Save</Button>
      <DataGrid x:Name="m_dataGrid" Grid.Column="0" AutoGenerateColumns="True" Margin="8"
                CanUserAddRows="False" 
                Background="Black" MaxWidth="300" MinHeight="200"
                FontFamily="Segoe UI"
                FontSize="8"
                ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" 
                RowHeaderStyle="{StaticResource RowHeaderStyle}"
                RowStyle="{StaticResource RowStyle}" 
                CellStyle="{StaticResource CellStyle}">
      </DataGrid>
      <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center">
        <Button Click="OnApplyButtonClick" Height="30" Margin="8">Apply</Button>
        <Button Click="OnEditColorClick" Height="30" Margin="8">Edit Color</Button>
        <Button Click="OnHelpButtonClick" Height="30" Margin="8">Help</Button>
      </StackPanel>
    </StackPanel>
    <Image x:Name="m_imageControl" Stretch="Uniform" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                   MouseLeftButtonDown="OnMouseLeftButtonDown" MouseLeftButtonUp="OnMouseLeftButtonUp" 
                   MouseMove="OnMouseMove" MouseWheel="OnMouseWheel">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform ScaleX="1" ScaleY="1" CenterX="0" CenterY="0"/>
          <TranslateTransform X="0" Y="0"/>
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
    <Grid Grid.Row="1" Grid.ColumnSpan="2" Background="Black">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="50*"/>
        <ColumnDefinition Width="50*"/>
      </Grid.ColumnDefinitions>
      <TextBox Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">jobs.fi@varian.com</TextBox>
      <TextBox Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">TalentIT 2012 Varian Medical Systems Finland</TextBox>
    </Grid>
  </Grid>
</UserControl>
