<Window x:Class="WpfPlanComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        Title="MainWindow">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal" Grid.Row="0">
      <TextBox x:Name="m_patientIdTextBox" Text="ComparePlans" FontFamily="Calibri" FontSize="20" HorizontalAlignment="Center"/>
      <Button x:Name="m_openPatientButton" Click="OnOpenPatientClicked" Content="Open Patient" Width="80"/>
      <Button x:Name="m_sendMail" Click="OnSaveXpsClicked" Content="Save as xps" Width="120"/>
    </StackPanel>
    <Grid x:Name="m_contentGrid" Grid.Row="1" Margin="20"/>
  </Grid>
</Window>
